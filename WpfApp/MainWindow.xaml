        <TextBox x:Name="TBFirstName" HorizontalAlignment="Left" Height="24" Margin="251,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="TBLastName" HorizontalAlignment="Left" Height="24" Margin="251,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" RenderTransformOrigin="0.5,0.5"/>
